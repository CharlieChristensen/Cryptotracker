<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar">
        <!--Theme Colors-->
        <item name="colorPrimary">?themeColorPrimary</item>
        <item name="colorPrimaryDark">?themeColorPrimaryDark</item>
        <item name="colorAccent">?themeColorAccent</item>
        <!--Dialog background-->
        <item name="colorBackgroundFloating">?themeColorPrimaryDark</item>
        <!--        <item name="backgroundTint">?themeColorPrimaryDark</item>-->
        <!--Menu Item Background-->
        <item name="android:itemBackground">?themeColorPrimaryDark</item>
        <!--Text Colors-->
        <item name="android:textColor">?themeTextColor</item>
        <item name="android:textColorSecondary">?themeTextColorSecondary</item>
        <!--Font-->
        <item name="fontFamily">@font/open_sans</item>
        <item name="android:fontFamily">@font/open_sans</item>

        <!--        <item name="colorSurface">?themeTextColorSecondary</item>-->
        <!--        <item name="colorOnSurface">?themeTextColor</item>-->
        <item name="appBarLayoutStyle">
            @style/Widget.MaterialComponents.AppBarLayout.PrimarySurface
        </item>
        <item name="materialCardViewStyle">@style/CardViewPrimary</item>
        <item name="android:statusBarColor">?themeColorPrimaryDark</item>
    </style>

    <!-- Dark application theme. -->
    <style name="AppTheme.Dark">
        <!--Theme Colors-->
        <item name="themeColorPrimary">@color/colorPrimary</item>
        <item name="themeColorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="themeColorAccent">@color/colorAccent</item>
        <item name="themeTextColor">@color/textColorPrimary</item>
        <item name="themeTextColorSecondary">@color/textColorSecondary</item>
        <!--Default Background-->
        <item name="android:windowBackground">@drawable/background_dark_theme</item>
        <!--Custom Attributes-->
        <item name="positivePriceGreen">@color/pastel_teal</item>
        <item name="negativePriceRed">@color/pastel_red</item>
        <item name="dividerColor">@color/dividerColor</item>
    </style>

    <!-- Teal application theme. -->
    <style name="AppTheme.Teal">
        <!--Theme Colors-->
        <item name="themeColorPrimary">@color/tealColorPrimary</item>
        <item name="themeColorPrimaryDark">@color/tealColorPrimaryDark</item>
        <item name="themeColorAccent">@color/tealColorAccent</item>
        <item name="themeTextColor">@color/tealTextColorPrimary</item>
        <item name="themeTextColorSecondary">@color/tealTextColorSecondary</item>
        <!--Default Background-->
        <item name="android:windowBackground">@drawable/background_teal_theme</item>
        <!--Custom Attributes-->
        <item name="positivePriceGreen">@color/pastel_teal</item>
        <item name="negativePriceRed">@color/pastel_red</item>
        <item name="dividerColor">@color/tealDividerColor</item>
    </style>

    <style name="CardViewPrimary" parent="CardView.Dark">
        <item name="cardBackgroundColor">?themeColorPrimaryDark</item>
        <item name="cardElevation">0dp</item>
        <item name="enforceMaterialTheme">true</item>
        <item name="android:stateListAnimator">@animator/card_button_animator</item>
    </style>

    <style name="AppTabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabTextColor">?themeTextColorSecondary</item>
        <item name="tabSelectedTextColor">?themeTextColor</item>
        <item name="tabIndicatorColor">?themeColorAccent</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

</resources>

