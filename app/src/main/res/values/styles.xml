<resources>

    <style name="BaseTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!--Font-->
        <item name="fontFamily">@font/open_sans</item>
        <item name="android:fontFamily">@font/open_sans</item>
        <item name="toolbarStyle">@style/Widget.MaterialComponents.Toolbar.Primary</item>
    </style>

    <!-- Dark application theme. -->
    <style name="AppTheme" parent="BaseTheme">
        <!--Theme Colors-->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--Dialog background-->
        <item name="colorBackgroundFloating">@color/colorPrimaryDark</item>
        <item name="backgroundTint">@color/colorPrimaryDark</item>
        <!--Card View-->
        <item name="materialCardViewStyle">@style/CardViewPrimary</item>
        <item name="cardStyleSecondary">@style/CardViewPrimary</item>
        <!--Menu Item Background-->
        <item name="android:itemBackground">@color/colorPrimaryDark</item>
        <!--Text Colors-->
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textColorSecondary">@color/textColorSecondary</item>
        <!--Default Background-->
        <item name="android:windowBackground">@drawable/background_dark_theme</item>
        <!--Custom Attributes-->
        <item name="positivePriceGreen">@color/pastel_teal</item>
        <item name="negativePriceRed">@color/pastel_red</item>
        <item name="dividerColor">@color/dividerColor</item>
    </style>

    <!-- Light application theme. -->
    <style name="AppTheme.Light" parent="BaseTheme">
        <!--Theme Colors-->
        <item name="colorPrimary">@color/lightColorPrimary</item>
        <item name="colorPrimaryDark">@color/lightColorPrimaryDark</item>
        <item name="colorAccent">@color/lightColorAccent</item>
        <!--Dialog background-->
        <item name="colorBackgroundFloating">@color/lightColorPrimaryDark</item>
        <item name="backgroundTint">@color/lightColorPrimaryDark</item>
        <!--Card View-->
        <item name="materialCardViewStyle">@style/CardViewPrimary.Light</item>
        <item name="cardStyleSecondary">@style/CardViewSecondary.Light</item>
        <!--Menu Item Background-->
        <item name="android:itemBackground">@color/lightColorPrimaryDark</item>
        <!--Text Colors-->
        <item name="android:textColor">@color/lightTextColorPrimary</item>
        <item name="android:textColorSecondary">@color/lightTextColorSecondary</item>
        <!--Default Background-->
        <item name="android:windowBackground">@color/white</item>
        <!--Custom Attributes-->
        <item name="positivePriceGreen">@color/green_600</item>
        <item name="negativePriceRed">@color/pastel_red</item>
        <item name="dividerColor">@color/lightDividerColor</item>
    </style>

    <!-- Teal application theme. -->
    <style name="AppTheme.Teal" parent="BaseTheme">
        <!--Theme Colors-->
        <item name="colorPrimary">@color/tealColorPrimary</item>
        <item name="colorPrimaryDark">@color/tealColorPrimaryDark</item>
        <item name="colorAccent">@color/tealColorAccent</item>
        <!--Dialog background-->
        <item name="colorBackgroundFloating">@color/tealColorPrimaryDark</item>
        <item name="backgroundTint">@color/tealColorPrimaryDark</item>
        <!--Card View-->
        <item name="materialCardViewStyle">@style/CardViewPrimary.Teal</item>
        <item name="cardStyleSecondary">@style/CardViewSecondary.Teal</item>
        <!--Menu Item Background-->
        <item name="android:itemBackground">@color/tealColorPrimaryDark</item>
        <!--Text Colors-->
        <item name="android:textColor">@color/tealTextColorPrimary</item>
        <item name="android:textColorSecondary">@color/tealTextColorSecondary</item>
        <!--Default Background-->
        <item name="android:windowBackground">@drawable/background_teal_theme</item>
        <!--Custom Attributes-->
        <item name="positivePriceGreen">@color/pastel_teal</item>
        <item name="negativePriceRed">@color/pastel_red</item>
        <item name="dividerColor">@color/tealDividerColor</item>
    </style>

</resources>

