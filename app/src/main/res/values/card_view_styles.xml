<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--Dark-->

    <style name="CardViewPrimary" parent="CardView.Dark">
        <item name="cardBackgroundColor">@color/colorPrimaryDark</item>
        <item name="cardElevation">0dp</item>
        <item name="android:stateListAnimator">@animator/card_button_animator</item>
    </style>

    <style name="CardViewSecondary" parent="CardView.Dark">
        <item name="cardBackgroundColor">@color/colorPrimaryDark</item>
        <item name="cardElevation">0dp</item>
    </style>

    <!--Light-->

    <style name="CardViewPrimary.Light" parent="CardView.Light">
        <item name="enforceMaterialTheme">true</item>
        <item name="android:stateListAnimator">@animator/card_button_animator</item>
    </style>

    <style name="CardViewSecondary.Light" parent="CardView.Light">
        <item name="enforceMaterialTheme">true</item>
        <item name="cardBackgroundColor">@color/lightColorPrimary</item>
    </style>

    <!--Teal-->

    <style name="CardViewPrimary.Teal" parent="CardView.Dark">
        <item name="enforceMaterialTheme">true</item>
        <item name="cardBackgroundColor">@color/tealColorPrimaryDark</item>
        <item name="cardElevation">0dp</item>
        <item name="android:stateListAnimator">@animator/card_button_animator</item>
    </style>

    <style name="CardViewSecondary.Teal" parent="CardView.Dark">
        <item name="enforceMaterialTheme">true</item>
        <item name="cardBackgroundColor">@color/tealColorPrimaryDark</item>
        <item name="cardElevation">0dp</item>
    </style>

</resources>
